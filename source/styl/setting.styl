@import "../node_modules/nib"

// Tabs
.tab-content
  display: none
  margin-bottom: 50px
  
  html.searching &.match
  html.measuring &
    display: block

#search-tab-content
  display: none
  
  html.searching &
    display: block

.tab-name, #search-tab-name
  position: fixed
  background: linear-gradient(top, white 40%, rgba(255, 255, 255, 0.92))
  border-bottom: 1px solid #eeeeee
  width: 720px
  top: 0
  padding-top: 14px
  padding-bottom: 6px
  font-size: 1.5em
  color: #303942
  z-index: 1
  
  html.searching &
    display: none

html.searching #search-tab-name
  display: block

.tab-settings
  margin-top: 63px

html.searching .tab-content.match + .tab-content.match .tab-settings
  margin-top: -30px

// Groups
.setting.group
  margin-top: 20px
  
  html.searching &
    display: none
    
  html.searching &.match
  html.measuring &
    display: block

.setting.group-name
  color: black
  font-size: 1.2em

.setting.group-content
  margin-top: 5px
  margin-left: 22px

// Settings
.setting.bundle
  width: 700px
  margin-bottom: 10px
  
  html.searching &
    display: none
    
  html.searching &.match
  html.measuring &
    display: block

.setting.container
  width: 700px

.setting.label, .setting.element-label
  margin-right: 20px
  font-size: 13px

.setting.label.checkbox, .setting.element-label.radiogroup
  position: relative
  margin-left: 5px
  margin-right: 0
  top: 1px

.setting.element.textarea
  display: block
  margin-top: 10px
  margin-left: 20px
  width: 620px
  height: 150px

.setting.element.label
  font-size: 12px
  line-height: 1.8em
  color: #777777

.setting.element.slider
  position: relative
  width: 200px
  top: 4px

.setting.display.slider
  margin-left: 8px
  color: #555555




.setting.label.radiogroup
  display: inline-block
  margin-bottom: 2px

.setting.element-group.radiogroup
  margin-top: 10px
  margin-left: 20px
  margin-bottom: 10px

.setting.label.radiogroup + .setting.element-group.radiogroup
  margin-top: 0

.setting.container.radiogroup
  margin-left: 20px

.setting.element-group-name.radiogroup
  margin-bottom: 2px
  font-size: 13px

.setting.element-group-content.radiogroup
  border-left: 1px solid #cccccc
  margin-left: 5px
  
  & .setting.container.radiogroup
    margin-left: 15px

#nothing-found
  display: none
  margin-top: 67px
  
  html.searching &.match
    display: block
