@import "../node_modules/nib"

.tab-name
  position: fixed
  background: linear-gradient(top, white 40%, rgba(255, 255, 255, 0.92))
  border-bottom: 1px solid #eeeeee
  width: 720px
  top: 0
  padding-top: 14px
  padding-bottom: 6px
  font-size: 1.5em
  color: #303942
  z-index: 1
  
  html.searching &
    display: none

html.searching #search-tab-name
  display: block

.tab-settings
  margin-top: 63px

#search-tab-settings
  display: block

.setting.group
  margin-top: 15px
  
  html.searching &
    display: none
    
  html.searching &.match
  html.measuring &
    display: block

.setting.group-name
  color: black
  font-size: 1.2em
  vertical-align: top

.setting.group-content
  margin-top: 1px
  margin-left: 18px

.setting.bundle
  max-width: 600px
  margin-bottom: 5px
  
  html.searching &
    display: none
    
  html.searching &.match
  html.measuring &
    display: block

.setting.bundle.list-box
  margin-bottom: 10px

.setting.label.radio-buttons + .setting.container.radio-buttons
  margin-top: 3px

.setting.label, .setting.element-label
  margin-right: 15px
  font-size: 13px
  font-weight: normal

.setting.label.checkbox, .setting.element-label
  margin-left: 5px
  margin-right: 0

.setting.label.checkbox
  position: relative
  top: 1px

.setting.element.slider
  position: relative
  width: 150px
  top: 4px

.setting.element.list-box
  display: block
  height: 100px
  width: 100%

.setting.display.slider
  margin-left: 5px
  color: #666666

#nothing-found
  display: none
  margin-top: 67px
  
  html.searching &.match
    display: block
